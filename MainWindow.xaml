<Window x:Class="GraphApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Strata365" 
        Height="800" 
        Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E"
        ResizeMode="CanResize"
        AllowsTransparency="True"
        WindowStyle="None">
    
    <Window.Resources>
        <!-- Glass Morphism Card Style -->
        <Style x:Key="GlassCardStyle" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" Opacity="0.1">
                        <GradientStop Color="White" Offset="0"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" Opacity="0.2">
                        <GradientStop Color="White" Offset="0"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="5" Opacity="0.3" BlurRadius="20"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Navigation Button Style -->
        <Style x:Key="NavButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Margin="10,2"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" Opacity="0.1">
                                            <GradientStop Color="White" Offset="0"/>
                                            <GradientStop Color="Transparent" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" Opacity="0.2">
                                            <GradientStop Color="White" Offset="0"/>
                                            <GradientStop Color="Transparent" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Active Navigation Button Style -->
        <Style x:Key="ActiveNavButton" TargetType="Button" BasedOn="{StaticResource NavButton}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#6366F1" Offset="0"/>
                        <GradientStop Color="#8B5CF6" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <!-- Modern Glass Button Style -->
        <Style x:Key="GlassButton" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#6366F1" Offset="0"/>
                        <GradientStop Color="#8B5CF6" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="MinHeight" Value="32"/>
        </Style>
        
        <!-- Success Button Style -->
        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource GlassButton}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#10B981" Offset="0"/>
                        <GradientStop Color="#059669" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Danger Button Style -->
        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource GlassButton}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#EF4444" Offset="0"/>
                        <GradientStop Color="#DC2626" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Header Style -->
        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#F8FAFC"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>
        
        <!-- Subheader Style -->
        <Style x:Key="SubHeaderText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#CBD5E1"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <!-- Body Text Style -->
        <Style x:Key="BodyText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E2E8F0"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>
    
    <!-- Window Chrome for custom title bar -->
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40" 
                      ResizeBorderThickness="5" 
                      UseAeroCaptionButtons="False"/>
    </WindowChrome.WindowChrome>
    
    <Border Background="#1E1E1E" CornerRadius="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Window Controls Row -->
            <Border Grid.Row="0" 
                    Background="Transparent"
                    CornerRadius="12,12,0,0">
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,10,0">
                    <Button Name="MinimizeButton" 
                            Content="−" 
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            Width="30"
                            Height="25"
                            FontSize="16"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Margin="2,0"
                            WindowChrome.IsHitTestVisibleInChrome="True"/>
                    <Button Name="MaximizeButton" 
                            Content="□" 
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            Width="30"
                            Height="25"
                            FontSize="14"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Margin="2,0"
                            WindowChrome.IsHitTestVisibleInChrome="True"/>
                    <Button Name="CloseButton" 
                            Content="✕" 
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            Width="30"
                            Height="25"
                            FontSize="14"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Margin="2,0,5,0"
                            WindowChrome.IsHitTestVisibleInChrome="True"/>
                </StackPanel>
            </Border>
            
            <!-- Title and Auth Bar -->
            <Border Grid.Row="1" 
                    Background="Transparent">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- App Title -->
                    <StackPanel Grid.Column="0" 
                                Orientation="Horizontal" 
                                VerticalAlignment="Center"
                                Margin="20,0">
                        <Image Name="AppLogo" Source="Strata365Logo2.png" Height="24" Width="24" Stretch="Uniform" Margin="0,0,10,0"/>
                        <StackPanel>
                            <TextBlock Text="Strata365" 
                                      FontSize="16" 
                                      FontWeight="Bold" 
                                      Foreground="White"/>
                            <TextBlock Text="Administrative Management Portal" 
                                      FontSize="10" 
                                      Foreground="#94A3B8"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- Company Info -->
                    <StackPanel Grid.Column="1" 
                                Margin="0,0,20,0" 
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right">
                        <TextBlock Name="CompanyName" 
                                  Text="" 
                                  FontSize="14" 
                                  FontWeight="SemiBold" 
                                  Foreground="#F1F5F9" 
                                  HorizontalAlignment="Right"/>
                        <TextBlock Name="AuthStatus" 
                                  Text="Not Connected" 
                                  FontSize="11" 
                                  Foreground="#94A3B8" 
                                  HorizontalAlignment="Right"/>
                    </StackPanel>
                    
                    <!-- Authentication Buttons -->
                    <StackPanel Grid.Column="2" 
                                Orientation="Horizontal" 
                                VerticalAlignment="Center"
                                Margin="0,0,20,0">
                        <Button Name="ConnectButton" 
                                Content="Connect" 
                                Foreground="White"
                                BorderThickness="1"
                                Padding="15,8"
                                Margin="0,0,5,0"
                                FontSize="14"
                                FontWeight="SemiBold"
                                Cursor="Hand"
                                MinWidth="90"
                                MinHeight="36">
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" Opacity="0.15">
                                    <GradientStop Color="#10B981" Offset="0"/>
                                    <GradientStop Color="#059669" Offset="1"/>
                                </LinearGradientBrush>
                            </Button.Background>
                            <Button.BorderBrush>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" Opacity="0.3">
                                    <GradientStop Color="#10B981" Offset="0"/>
                                    <GradientStop Color="White" Offset="1"/>
                                </LinearGradientBrush>
                            </Button.BorderBrush>
                            <Button.Effect>
                                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="3" Opacity="0.2" BlurRadius="10"/>
                            </Button.Effect>
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="8"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" Opacity="0.25">
                                                        <GradientStop Color="#10B981" Offset="0"/>
                                                        <GradientStop Color="#059669" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" Opacity="0.35">
                                                        <GradientStop Color="#059669" Offset="0"/>
                                                        <GradientStop Color="#047857" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <Button Name="DisconnectButton"
                                Content="Disconnect"
                                Foreground="White"
                                BorderThickness="1"
                                Padding="15,8"
                                FontSize="14"
                                FontWeight="SemiBold"
                                Cursor="Hand"
                                MinWidth="90"
                                MinHeight="36"
                                IsEnabled="False"
                                Visibility="Collapsed">
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" Opacity="0.15">
                                    <GradientStop Color="#F59E0B" Offset="0"/>
                                    <GradientStop Color="#D97706" Offset="1"/>
                                </LinearGradientBrush>
                            </Button.Background>
                            <Button.BorderBrush>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" Opacity="0.3">
                                    <GradientStop Color="#F59E0B" Offset="0"/>
                                    <GradientStop Color="White" Offset="1"/>
                                </LinearGradientBrush>
                            </Button.BorderBrush>
                            <Button.Effect>
                                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="3" Opacity="0.2" BlurRadius="10"/>
                            </Button.Effect>
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="8"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" Opacity="0.25">
                                                        <GradientStop Color="#F59E0B" Offset="0"/>
                                                        <GradientStop Color="#D97706" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" Opacity="0.35">
                                                        <GradientStop Color="#D97706" Offset="0"/>
                                                        <GradientStop Color="#B45309" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Main Content Area -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="280"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Left Navigation Panel -->
                <Border Grid.Column="0" 
                        Background="Transparent"
                        BorderBrush="#374151" 
                        BorderThickness="0,0,1,0">
                    <StackPanel Margin="0,20,0,0">
                        <TextBlock Text="NAVIGATION" 
                                  FontSize="12" 
                                  FontWeight="Bold" 
                                  Foreground="#9CA3AF" 
                                  Margin="20,0,20,15"/>
                        
                        <Button Name="AdminButton" Content="🏢 Admin" Style="{StaticResource ActiveNavButton}"/>
                        <Button Name="EntraButton" Content="🔐 Entra ID" Style="{StaticResource NavButton}"/>
                        <Button Name="IntuneButton" Content="📱 Intune" Style="{StaticResource NavButton}"/>
                        <Button Name="SecurityButton" Content="🛡️ Security" Style="{StaticResource NavButton}"/>
                    </StackPanel>
                </Border>
                
                <!-- Main Content Panel -->
                <ScrollViewer Grid.Column="1" 
                              VerticalScrollBarVisibility="Auto" 
                              Background="Transparent">
                    <StackPanel Name="MainContentPanel" Margin="20">
                        
                        <!-- Admin Dashboard Section -->
                        <StackPanel Name="AdminContent">
                            <!-- Quick Stats Section -->
                            <Border Style="{StaticResource GlassCardStyle}">
                                <StackPanel>
                                    <TextBlock Text="📊 Tenant Overview" Style="{StaticResource HeaderText}"/>
                                    <TextBlock Text="Key metrics and statistics from your Microsoft 365 tenant" Style="{StaticResource SubHeaderText}"/>
                                    
                                    <Grid Name="StatsGrid">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <Border Grid.Column="0" 
                                                Background="#1E3A8A" 
                                                CornerRadius="8" 
                                                Padding="15" 
                                                Margin="0,0,6,0"
                                                Opacity="0.8">
                                            <StackPanel HorizontalAlignment="Center">
                                                <TextBlock Text="👥" FontSize="24" HorizontalAlignment="Center"/>
                                                <TextBlock Name="UserCount" 
                                                          Text="--" 
                                                          FontSize="20" 
                                                          FontWeight="Bold" 
                                                          HorizontalAlignment="Center"
                                                          Foreground="White"/>
                                                <TextBlock Text="Users" 
                                                          FontSize="12" 
                                                          Foreground="#CBD5E1" 
                                                          HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                        
                                        <Border Grid.Column="1" 
                                                Background="#166534" 
                                                CornerRadius="8" 
                                                Padding="15" 
                                                Margin="3,0"
                                                Opacity="0.8">
                                            <StackPanel HorizontalAlignment="Center">
                                                <TextBlock Text="🏢" FontSize="24" HorizontalAlignment="Center"/>
                                                <TextBlock Name="GroupCount" 
                                                          Text="--" 
                                                          FontSize="20" 
                                                          FontWeight="Bold" 
                                                          HorizontalAlignment="Center"
                                                          Foreground="White"/>
                                                <TextBlock Text="Groups" 
                                                          FontSize="12" 
                                                          Foreground="#CBD5E1" 
                                                          HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                        
                                        <Border Grid.Column="2" 
                                                Background="#92400E" 
                                                CornerRadius="8" 
                                                Padding="15" 
                                                Margin="3,0"
                                                Opacity="0.8">
                                            <StackPanel HorizontalAlignment="Center">
                                                <TextBlock Text="📱" FontSize="24" HorizontalAlignment="Center"/>
                                                <TextBlock Name="DeviceCount" 
                                                          Text="--" 
                                                          FontSize="20" 
                                                          FontWeight="Bold" 
                                                          HorizontalAlignment="Center"
                                                          Foreground="White"/>
                                                <TextBlock Text="Devices" 
                                                          FontSize="12" 
                                                          Foreground="#CBD5E1" 
                                                          HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                        
                                        <Border Grid.Column="3" 
                                                Background="#7C2D12" 
                                                CornerRadius="8" 
                                                Padding="15" 
                                                Margin="6,0,0,0"
                                                Opacity="0.8">
                                            <StackPanel HorizontalAlignment="Center">
                                                <TextBlock Text="📄" FontSize="24" HorizontalAlignment="Center"/>
                                                <TextBlock Name="LicenseCount" 
                                                          Text="--" 
                                                          FontSize="20" 
                                                          FontWeight="Bold" 
                                                          HorizontalAlignment="Center"
                                                          Foreground="White"/>
                                                <TextBlock Text="Licenses" 
                                                          FontSize="12" 
                                                          Foreground="#CBD5E1" 
                                                          HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                    </Grid>
                                </StackPanel>
                            </Border>
                            
                            <!-- Tenant Information Section -->
                            <Border Style="{StaticResource GlassCardStyle}">
                                <StackPanel>
                                    <TextBlock Text="🏢 Tenant Information" Style="{StaticResource HeaderText}"/>
                                    <TextBlock Text="Detailed information about your Microsoft 365 organization" Style="{StaticResource SubHeaderText}"/>
                                    
                                    <StackPanel Name="TenantInfoPanel">
                                        <TextBlock Text="Connect to Microsoft Graph to view tenant information" 
                                                  Style="{StaticResource BodyText}" 
                                                  FontStyle="Italic"/>
                                    </StackPanel>
                                    
                                    <Button Name="RefreshTenantInfoButton" 
                                            Content="🔄 Refresh Tenant Info" 
                                            Style="{StaticResource GlassButton}" 
                                            Margin="0,10,0,0"
                                            HorizontalAlignment="Left"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                        
                        <!-- Entra ID Section (Hidden by default) -->
                        <StackPanel Name="EntraContent" Visibility="Collapsed">
                            <!-- Entra ID Dashboard -->
                            <Border Style="{StaticResource GlassCardStyle}">
                                <StackPanel>
                                    <TextBlock Text="🔐 Entra ID Dashboard" Style="{StaticResource HeaderText}"/>
                                    <TextBlock Text="Identity and access management overview" Style="{StaticResource SubHeaderText}"/>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <Border Grid.Column="0" 
                                                Background="#7C3AED" 
                                                CornerRadius="8" 
                                                Padding="15" 
                                                Margin="0,0,8,0"
                                                Opacity="0.8">
                                            <StackPanel HorizontalAlignment="Center">
                                                <TextBlock Text="👤" FontSize="24" HorizontalAlignment="Center"/>
                                                <TextBlock Name="ActiveUserCount" 
                                                          Text="--" 
                                                          FontSize="20" 
                                                          FontWeight="Bold" 
                                                          HorizontalAlignment="Center"
                                                          Foreground="White"/>
                                                <TextBlock Text="Active Users" 
                                                          FontSize="12" 
                                                          Foreground="#CBD5E1" 
                                                          HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                        
                                        <Border Grid.Column="1" 
                                                Background="#DC2626" 
                                                CornerRadius="8" 
                                                Padding="15" 
                                                Margin="4,0"
                                                Opacity="0.8">
                                            <StackPanel HorizontalAlignment="Center">
                                                <TextBlock Text="🔒" FontSize="24" HorizontalAlignment="Center"/>
                                                <TextBlock Name="MfaEnabledCount" 
                                                          Text="--" 
                                                          FontSize="20" 
                                                          FontWeight="Bold" 
                                                          HorizontalAlignment="Center"
                                                          Foreground="White"/>
                                                <TextBlock Text="MFA Enabled" 
                                                          FontSize="12" 
                                                          Foreground="#CBD5E1" 
                                                          HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                        
                                        <Border Grid.Column="2" 
                                                Background="#059669" 
                                                CornerRadius="8" 
                                                Padding="15" 
                                                Margin="8,0,0,0"
                                                Opacity="0.8">
                                            <StackPanel HorizontalAlignment="Center">
                                                <TextBlock Text="📮" FontSize="24" HorizontalAlignment="Center"/>
                                                <TextBlock Name="SharedMailboxCount" 
                                                          Text="--" 
                                                          FontSize="20" 
                                                          FontWeight="Bold" 
                                                          HorizontalAlignment="Center"
                                                          Foreground="White"/>
                                                <TextBlock Text="Shared Mailboxes" 
                                                          FontSize="12" 
                                                          Foreground="#CBD5E1" 
                                                          HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                    </Grid>
                                    
                                    <Button Name="RefreshEntraStatsButton" 
                                            Content="🔄 Refresh Entra ID Stats" 
                                            Style="{StaticResource GlassButton}" 
                                            Margin="0,15,0,0"
                                            HorizontalAlignment="Left"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- User Copy Functionality -->
                            <Border Style="{StaticResource GlassCardStyle}">
                                <StackPanel>
                                    <TextBlock Text="👤 Copy User Profile" Style="{StaticResource HeaderText}"/>
                                    <TextBlock Text="Copy an existing user's profile to create a new user with same groups, licenses, and settings" Style="{StaticResource SubHeaderText}"/>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                        <!-- Source User Selection -->
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Source User (to copy from):" Style="{StaticResource BodyText}" Margin="0,0,0,5"/>
                            
                            <!-- User Search and Selection -->
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Search Box with Dropdown -->
                                <ComboBox Name="UserSearchComboBox" 
                                         Grid.Row="0"
                                         Height="35" 
                                         Background="#2D3748" 
                                         Foreground="White" 
                                         BorderBrush="#4A5568" 
                                         BorderThickness="1" 
                                         Padding="10,8"
                                         FontSize="14"
                                         IsEditable="True"
                                         IsTextSearchEnabled="True"
                                         TextSearch.TextPath="DisplayText"
                                         Margin="0,0,0,5">
                                    <ComboBox.Resources>
                                        <Style TargetType="ComboBoxItem">
                                            <Setter Property="Background" Value="#2D3748"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="Padding" Value="8"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ComboBoxItem">
                                                        <Border Background="{TemplateBinding Background}" 
                                                                Padding="{TemplateBinding Padding}">
                                                            <StackPanel Orientation="Vertical">
                                                                <TextBlock Text="{Binding DisplayName}" 
                                                                          FontWeight="SemiBold" 
                                                                          Foreground="White"
                                                                          FontSize="14"/>
                                                                <TextBlock Text="{Binding UserPrincipalName}" 
                                                                          FontSize="11" 
                                                                          Foreground="#94A3B8"/>
